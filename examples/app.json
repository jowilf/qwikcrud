{
    "name": "Task Manager",
    "description": "An application for managing tasks with deadlines and assignees.",
    "entities": [
        {
            "name": "User",
            "fields": [
                {
                    "name": "id",
                    "type": "ID"
                },
                {
                    "name": "email",
                    "type": "Email",
                    "constraints": {
                        "max_length": 100,
                        "unique": true
                    }
                },
                {
                    "name": "password",
                    "type": "String",
                    "constraints": {
                        "min_length": 8,
                        "max_length": 100
                    }
                },
                {
                    "name": "firstName",
                    "type": "String",
                    "constraints": {
                        "max_length": 50
                    }
                },
                {
                    "name": "lastName",
                    "type": "String",
                    "constraints": {
                        "max_length": 50
                    }
                },
                {
                    "name": "avatar",
                    "type": "Image"
                },
                {
                    "name": "bio",
                    "type": "Text"
                }
            ]
        },
        {
            "name": "TaskList",
            "fields": [
                {
                    "name": "id",
                    "type": "ID"
                },
                {
                    "name": "title",
                    "type": "String",
                    "constraints": {
                        "max_length": 100
                    }
                },
                {
                    "name": "description",
                    "type": "Text"
                }
            ]
        },
        {
            "name": "Task",
            "fields": [
                {
                    "name": "id",
                    "type": "ID"
                },
                {
                    "name": "name",
                    "type": "String",
                    "constraints": {
                        "max_length": 500
                    }
                },
                {
                    "name": "dueDate",
                    "type": "DateTime"
                },
                {
                    "name": "status",
                    "type": "Enum",
                    "constraints": {
                        "allowed_values": [
                            "PENDING",
                            "IN_PROGRESS",
                            "COMPLETED"
                        ]
                    }
                },
                {
                    "name": "instructions",
                    "type": "File",
                    "constraints": {
                        "mime_types": [
                            "application/pdf",
                            "application/text"
                        ]
                    }
                }
            ]
        }
    ],
    "relations": [
        {
            "name": "User_TaskLists",
            "type": "ONE_TO_MANY",
            "from": "User",
            "to": "TaskList",
            "field_name": "taskLists",
            "backref_field_name": "user"
        },
        {
            "name": "TaskList_Tasks",
            "type": "ONE_TO_MANY",
            "from": "TaskList",
            "to": "Task",
            "field_name": "tasks",
            "backref_field_name": "taskList"
        },
        {
            "name": "Task_Assignees",
            "type": "MANY_TO_MANY",
            "from": "Task",
            "to": "User",
            "field_name": "assignees",
            "backref_field_name": "tasks"
        }
    ]
}
